main
var input, i, myvar, sum;

function sumdigits(n)
var units, div , sum, round;
{	
	let sum <- 0;
	while n > 0 do
		let div <- n/10;
        let round <- div*10;
		let units <- n - round;
		let sum <- sum + units;
        let n <- div;
	od;
	return sum;
};

{
	call outputnewline();
	let input <- call inputnum();
	let i <- 0;
	while i < input do
		let myvar <- call inputnum();
		let sum <- call sumdigits(myvar);
		call outputnum(myvar);
		call outputnewline();
		call outputnum(sum);
		call outputnewline();
		let i <- i + 1;
	od;
}.
